{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",

    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ES2021", "DOM"],
    "types": ["node"],
    "moduleResolution": "node",

    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "removeComments": false,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noFallthroughCasesInSwitch": false,

    "paths": {
      "@watsonjs/common": ["packages/common/src"],
      "@watsonjs/core": ["packages/core/src"],

      "@common/builtin": ["packages/common/src/lib/builtin"],
      "@common/adapter": ["packages/common/src/lib/adapter"],
      "@common/fields": ["packages/common/src/lib/fields.ts"],
      "@common/exceptions": ["packages/common/src/lib/exceptions"],
      "@common/event": ["packages/common/src/lib/event"],
      "@common/router": ["packages/common/src/lib/router"],
      "@common/router/*": ["packages/common/src/lib/router/*"],
      "@common/hooks": ["packages/common/src/lib/hooks"],
      "@common/inquirable": ["packages/common/src/lib/inquirable"],
      "@common/enums": ["packages/common/src/lib/enums"],
      "@common/pipeline": ["packages/common/src/lib/pipeline"],
      "@common/pipeline/*": ["packages/common/src/lib/pipeline/*"],
      "@common/discord-types": ["packages/common/src/lib/discord-types"],
      "@common/decorators": ["packages/common/src/lib/decorators"],
      "@common/decorators/*": ["packages/common/src/lib/decorators/*"],
      "@common/command/*": ["packages/common/src/lib/command/*"],
      "@common/utils": ["packages/common/src/lib/utils"],
      "@common/constants": ["packages/common/src/lib/constants"],

      "@core/adapters": ["packages/core/src/lib/adapters"],
      "@core/command": ["packages/core/src/lib/command"],
      "@core/di": ["packages/core/src/lib/di"],
      "@core/router": ["packages/core/src/lib/router"],
      "@core/router/*": ["packages/core/src/lib/router/*"],
      "@core/errors": ["packages/core/src/lib/errors"],
      "@core/logger": ["packages/core/src/lib/logger"],
      "@core/interfaces": ["packages/core/src/lib/interfaces"],
      "@core/interfaces/*": ["packages/core/src/lib/interfaces/*"],
      "@core/lifecycle": ["packages/core/src/lib/lifecycle"],
      "@core/exceptions": ["packages/core/src/lib/exceptions"],
      "@core/utils": ["packages/core/src/lib/util"],

      "@di/decorators/*": ["packages/di/src/lib/decorators/*"],
      "@di/data-structures": ["packages/di/src/lib/data-structures"],
      "@di/core/*": ["packages/di/src/lib/core/*"],
      "@di/hooks": ["packages/di/src/lib/hooks"],
      "@di/providers/*": ["packages/di/src/lib/providers/*"],
      "@di/types": ["packages/di/src/lib/types"],
      "@di/constants": ["packages/di/src/lib/constants"],
      "@di/utils": ["packages/di/src/lib/utils"],
      "@di/utils/common": ["packages/di/src/lib/utils/shared.util"],
      "@di/fields": ["packages/di/src/lib/fields"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
