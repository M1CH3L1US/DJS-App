{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es6","es2017", "DOM"],
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@watson/common": ["./packages/common"],
      "@watson/core": ["./packages/core"]
    },
    "types": ["node"]
  },
}
