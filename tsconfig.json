{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ES2020", "dom"],
    "types": ["node"],
    "outDir": "__",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": false,
    "importHelpers": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@watsonjs/*": ["packages/*"],

      "@common/builtin": ["./packages/common/src/builtin"],
      "@common/adapter": ["./packages/common/src/adapter"],
      "@common/fields": ["packages/common/src/fields.ts"],
      "@common/exceptions": ["./packages/common/src/exceptions"],
      "@common/event": ["packages/common/src/event"],
      "@common/router": ["packages/common/src/router"],
      "@common/router/*": ["packages/common/src/router/*"],
      "@common/hooks": ["packages/common/src/hooks"],
      "@common/inquirable": ["packages/common/src/inquirable"],
      "@common/enums": ["packages/common/src/enums"],
      "@common/pipeline": ["packages/common/src/pipeline"],
      "@common/pipeline/*": ["packages/common/src/pipeline/*"],
      "@common/discord-types": ["packages/common/src/discord-types"],
      "@common/decorators": ["./packages/common/src/decorators"],
      "@common/decorators/*": ["packages/common/src/decorators/*"],
      "@common/command/*": ["packages/common/src/command/*"],
      "@common/utils": ["./packages/common/src/utils"],
      "@common/constants": ["./packages/common/src/constants"],

      "@core/adapters": ["./packages/core/src/adapters"],
      "@core/command": ["./packages/core/src/command"],
      "@core/di": ["./packages/core/src/di"],
      "@core/router": ["./packages/core/src/router"],
      "@core/router/*": ["./packages/core/src/router/*"],
      "@core/errors": ["./packages/core/src/errors"],
      "@core/logger": ["./packages/core/src/logger"],
      "@core/interfaces": ["./packages/core/src/interfaces"],
      "@core/interfaces/*": ["./packages/core/src/interfaces/*"],
      "@core/lifecycle": ["./packages/core/src/lifecycle"],
      "@core/exceptions": ["./packages/core/src/exceptions"],
      "@core/utils": ["./packages/core/src/util"],

      "@di/decorators/*": ["packages/di/src/decorators/*"],
      "@di/data-structures": ["packages/di/src/data-structures"],
      "@di/core/*": ["packages/di/src/core/*"],
      "@di/hooks": ["packages/di/src/hooks"],
      "@di/providers": ["packages/di/src/providers"],
      "@di/types": ["packages/di/src/types"],
      "@di/constants": ["packages/di/src/constants"],
      "@di/utils": ["packages/di/src/utils"],
      "@di/utils/common": ["packages/di/src/utils/shared.util"],
      "@di/fields": ["packages/di/src/fields"]
    }
  },
  "exclude": ["node_modules", "./**/*.spec.ts", "dist"]
}
